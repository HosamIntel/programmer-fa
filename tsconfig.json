{
  "include": [
    "./**/*.ts"
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "outDir": "dist",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "sourceMap": false,
    "typeRoots": ["./src/types/**/*.d.ts"],
    "declaration": true
  },
  "exclude": [
    "./test/",
    "./node_modules/",
    "./dist/"
  ]
}
